<div class = "container">
  <div class = "row justify-content-around">
    <p>
      <div class = 'image col-lg6-'>
      
      <%= image_tag @photo.image.url %>
      </div>
    </p>



    <%#ここからgeocode%>

    <script type="text/javascript">
      function initMap() {
        var test ={lat: <%= @photo.latitude %>, lng: <%= @photo.longitude %>};
        var map = new google.maps.Map(document.getElementById('map'), {
                  zoom: 15, 
                  center: test
                  });
        var transitLayer = new google.maps.TransitLayer();
        transitLayer.setMap(map);

        var contentString = '住所：<%= @photo.address %>';
        var infowindow = new google.maps.InfoWindow({
          content: contentString
        });

        var marker = new google.maps.Marker({
                      position:test,
                      map: map,
                      title: contentString
                    });

        marker.addListener('click', function() {
          infowindow.open(map, marker);
        });
      }
    </script>

    <script async defer
                  src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap">
    </script>

    <style type="text/css">
      #map { height: 200px;
            width: 70%;}
    </style>

    <!--mapの表示-->
    <div id="map" class = "col-lg-6"></div>

    <%#geocodeここまで%>

    <div class = "col-lg-4">
    <p>
      <strong>写真説明:</strong>
      <%= @photo.content %>
    </p>
    </div>
    
    <div class = "col-lg-4 geomap">
    <p>
      <% @photo.products.each do |product| %>
        <strong>値段:</strong>
        <%= product.price %> 円
      <% end %>
    </p>
    </div>
    
    <div class = "col-lg-4">
    <p>
      <% @photo.product_urls.each do |product_url| %>
      <strong>商品URL:</strong>
      <%= text_url_to_link(h(product_url.price_url)).html_safe %>
      <%#= product_url.price_url %>
      <% end %>
    </p>
    </div>

    <p>
      <% @photo.labels.each do |label| %>
        <strong>ラベル:</strong>
        <%= label.name %><br>
      <% end %>
    <p>
  </div>
</div>


<br>

