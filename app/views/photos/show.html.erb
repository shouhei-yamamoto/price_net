    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(photo_id: @photo.id), method: :photo, class: 'btn btn-primary' %>
  <% end %>
<% end %>

