<%= form_with(model: photo, local: true) do |f| %>
  <% if photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
        <% photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%#photoモデルの記載%>
  <div class="field">
    <%= f.label :image %>
    <%= image_tag(photo.image.url) if photo.image && photo.image.url %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>

  <div class="content">
    <%= f.label :'写真説明' %>
    <%= f.text_field :content %>
  </div>
  
  <%#geocoderの記載%>
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, placeholder: "住所" %>
  </div>
  
  <%#cocoonの記載%>
   <%= f.fields_for :products do |product| %>
    <p><%= render 'product_fields', f: product %></p>
  <% end %>

  <div class = 'link' >
    <%= link_to_add_association 'フォームを追加する', f, :products %>
  </div>

  <%= f.fields_for :product_urls do |product_url| %>
    <p><%= render 'product_url_fields', f: product_url %></p>
  <% end %>

  
  <div class = 'link' >
    <%= link_to_add_association 'フォームを追加する', f, :product_urls %>
  </div>
  
  <%#ラベルの記載%>
  <div class="field">
    <%= f.collection_check_boxes(:label_ids, Label.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= f.submit '投稿' %>
  </div>
<% end %>

<div class = 'link' >
    <%= button_to 'ラベル登録', new_label_path,  method: :get, class: "btn btn-primary" %>
</div>