<p id="notice"><%= notice %></p>

<div class = "label_index_heading">
<h1>ラベル一覧</h1>
</div>
  <div class = "container-fluid">
    <th colspan="3"></th>
    <div class = "row  justify-content-center">
      <% @labels.each do |label| %>
        <div class = "tag">
          <span><%= label.name %></p>
          <span><%= link_to '詳細', label %></span>
          <span><%= link_to '編集', edit_label_path(label) %></span>
          <span><%= link_to '削除', label, method: :delete %></span>
        </div>
      <% end %>
    </div>  
  </div>

<br>

<div class = "label_index_register">
  <%= button_to 'ラベル登録', new_label_path,  method: :get, class: "btn btn-primary" %>
</div>
