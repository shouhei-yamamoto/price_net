<p id="notice"><%= notice %></p>

<h1>ラベル一覧</h1>
  <div class = "container-fluid">

      <p>ラベル</p>
      <th colspan="3"></th>
   

 
    <% @labels.each do |label| %>
      <div class = "tag">
        <span><%= label.name %></p>
        <span><%= link_to '詳細', label %></span>
        <span><%= link_to '編集', edit_label_path(label) %></span>
        <span><%= link_to '削除', label, method: :delete %></span>
      </div>
    <% end %>
    
  </div>

<br>

<%= button_to 'ラベル登録', new_label_path,  method: :get, class: "btn btn-primary" %>
